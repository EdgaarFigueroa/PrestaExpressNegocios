extends layouth

append content
    .col.s12.m6.section.s-h-half
        h5 Cambiar Contrase単a
        .divider
        form.col.s12(method='post', action='this')
            .section
                .row
                    .input-field.valign-wrapper
                        input#antigua.validate.col.s10(type='password', data-length="10", required)
                        label(for='antigua') Contrase単a antigua
                        img.right(src='/img/icons/icons8_Eye_32px.png')
            .section
                .row
                    .input-field.valign-wrapper
                        input#nueva.validate.col.s10(type='password', data-length="10", required)
                        label(for='nueva') Contrase単a nueva
                        img.right(src='/img/icons/icons8_Eye_32px.png')
            .section
                .row
                    .input-field.valign-wrapper
                        input#confirmacion.validate.col.s10(type='password', data-length="10", required)
                        label(for='confirmacion') Confirmar contrase単a nueva
                        img.right(src='/img/icons/icons8_Eye_32px.png')
            .section.right-align
                input.btn.hoverable(type='submit', value='Guardar cambios')
    .col.s12.m6.s-h-half
        .left-align
            a(href='/reporte-problema') 
                .btn Informar de un problema
        .center-align
            a(href='/terminosycondiciones') Leer terminos y condiciones
        .center-align.bottom
            a(href='/logout') 
                .btn.hoverable Cerrar Sesion
